<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zw.dao.IUserDao">
	<resultMap id="BaseResultMap" type="com.zw.model.User">
		<result column="id" property="id" jdbcType="INTEGER"/>
		<result column="username" property="username" jdbcType="VARCHAR"/>
		<result column="password" property="password" jdbcType="VARCHAR"/>
	</resultMap>
	
	<sql id="Base_Column_List">
		id, name, password
	</sql>
	<!-- 查询用户 -->
	<select id="queryByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
		select 
		<include refid="Base_Column_List"/> 
		from user 
		where id=#{id,jdbcType=INTEGER}
	</select>
	<!-- 查询用户 -->
	<select id="getAllUser" resultMap="BaseResultMap">
		select 
		<include refid="Base_Column_List"/> 
		from user
	</select>
	<!-- 批量查询用户 -->
	<select id="queryUserByBatch" resultMap="BaseResultMap" parameterType="java.util.Map">
		select 
		<include refid="Base_Column_List"/>
		from user 
		where id in 
		<foreach collection="idList" item="userId" index="index" open="(" separator="," close=")">
			#{userId,jdbcType=DECIMAL}
		</foreach>
	</select>
	<!-- 插入用户,useGeneratedKeys默认值为false，keyProperty的值对应的是User类中的主键名 -->
	<insert id="insertUser" parameterType="com.zw.model.User" useGeneratedKeys="true" keyProperty="id">
		insert into user 
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id!=null">
				id,
			</if>
			<if test="username!=null">
				username,
			</if>
			<if test="password!=null">
				password,
			</if>
		</trim>
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id!=null">
				#{id,jdbcType=INTEGER},
			</if>
			<if test="username!=null">
				#{username,jdbcType=VARCHAR},
			</if>
			<if test="password!=null">
				#{password,jdbcType=VARCHAR},
			</if>
		</trim>
	</insert>
	<!-- 批量插入用户 -->
	<insert id="insertUserByBatch" parameterType="java.util.List">
		insert into USER 
		(ID,USERNAME,PASSWORD)
		select A.* from 
		(
		<foreach collection="list" item="user" index="index" separator="union">
			select 
			#{user.id,jdbcType=INTEGER},
			#{user.username,jdbcType=VARCHAR},
			#{user.password,jdbcType=VARCHAR}
			from dual
		</foreach>
		) A
	</insert>
	<!-- 删除用户 -->
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from user 
		where id =#{id,jdbcType=INTEGER}
	</delete>
	<!-- 批量删除用户 -->
	<delete id="deleteUserByBatch" parameterType="java.util.Map">
		delete from user 
		where id in 
		<foreach collection="iList" item="ids" open="(" separator="," close=")">
			#{ids,jdbcType=DECIMAL}
		</foreach>
	</delete>
	<!-- 更新用户 -->
	<update id="updateByPrimaryKey" parameterType="com.zw.model.User">
		update user 
		<set>
			<if test="username!=null">
				username=#{username,jdbcType=VARCHAR},
			</if>
			<if test="pasword!=null">
				password=#{password,jdbcType=VARCHAR},
			</if>
		</set>
		where id=#{id,jdbcType=INTEGER}
	</update>
</mapper>